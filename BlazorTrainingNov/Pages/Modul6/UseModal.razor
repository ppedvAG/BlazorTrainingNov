@page "/modal"
<h3>UseModal</h3>
<button type="button" class="btn btn-primary" @onclick="show">
  Launch demo modal
</button>
<ModalPPEDV @ref="modal1" Title="Hallo Welt" OnSave="save">
    <p>
        <label>eingaben</label>
        <input class="form-control" @bind="eingabe" />
    </p>

</ModalPPEDV>
@code {
    ModalPPEDV modal1;
    string eingabe;

    void show()
    {
        modal1.Show();

    }
    void save()
    {

        eingabe = "";
        modal1.Show();
        
    }
}
